<div class="shopping-list-delete-container">
    <h1>Delete Shoppign List</h1>

    <div class="warning-section">
        <p class="warning-text">Warning!</p>
        <p class="sub-warning-text">Are you sure you want to delete this shopping list? This action cannot be undone.</p>
    </div>

    <div class="shopping-list-details">
        <h4>Shopping List</h4>
        <hr />
        <p class="shopping-list-name">@Html.DisplayFor(model => model.Name)</p>
    </div>

    <div class="action-buttons">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ShoppingListId" />
            <button type="submit" class="btn-delete">Delete</button>
        </form>
        <a asp-action="Index" class="btn-cancel">Cancel</a>
    </div>
</div>