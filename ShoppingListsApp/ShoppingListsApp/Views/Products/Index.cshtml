@model IEnumerable<ShoppingListApp.Models.Product>

@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <link rel="stylesheet" href="~/css/ProductsCSS/ProductIndex.css" />
}

<div class="products-index">
    <div class="container">
        <h1>Products</h1>

        <div class="create-new">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create">Add New Product</a>
            }
        </div>

        <div class="products-grid">
            @foreach (var item in Model)
            {
                <div class="product-card">
                    <h3>@item.Name</h3>
                    <div class="actions">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn-edit">Edit</a>
                        }
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn-details">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn-delete">Delete</a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

