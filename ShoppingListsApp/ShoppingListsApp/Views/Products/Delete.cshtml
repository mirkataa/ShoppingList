<div class="product-delete-container">
    <h1>Delete Product</h1>

    <div class="warning-section">
        <p class="warning-text">Warning!</p>
        <p class="sub-warning-text">Are you sure you want to delete this product? This action cannot be undone.</p>
    </div>

    <div class="product-details">
        <h4>Product</h4>
        <hr />
        <p class="product-name">@Html.DisplayFor(model => model.Name)</p>
    </div>

    <div class="action-buttons">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductId" />
            <button type="submit" class="btn-delete">Delete</button>
        </form>
        <a asp-action="Index" class="btn-cancel">Cancel</a>
    </div>
</div>